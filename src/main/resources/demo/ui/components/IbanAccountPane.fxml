<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="demo.ui.components.IbanBankAccountsController"
      styleClass="hbox-spacing, common-left-padding" alignment="BASELINE_LEFT">
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Выберите страну"/>
        <ComboBox fx:id="ibanCountryComboBox" minWidth="165" maxWidth="165"/>
    </HBox>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="Сгенерировать IBAN" onAction="#onGenerateIbanAccount" minWidth="180" maxWidth="180"/>
        <TextField fx:id="resultIbanField" minWidth="300" maxWidth="300" editable="false"/>
        <Button text="⧉" onAction="#copyIbanAccount" styleClass="copy-button">
            <tooltip>
                <Tooltip text="Скопировать в буфер" styleClass="copy-in-buffer-tooltip"/>
            </tooltip>
        </Button>
    </HBox>
</VBox>