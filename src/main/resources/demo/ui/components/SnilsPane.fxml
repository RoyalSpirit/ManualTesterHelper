<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="demo.ui.components.SnilsController" spacing="16">
    <children>
        <VBox styleClass="card" alignment="BASELINE_LEFT">
            <Label text="Генератор тестовых значений СНИЛС" styleClass="section-title"/>
            <HBox styleClass="hbox-spacing" alignment="BASELINE_LEFT">
                <Button text="Сгенерировать СНИЛС" onAction="#onGenerateSnils" minWidth="180" maxWidth="180"/>
                <TextField fx:id="resultSnilsField" minWidth="150" maxWidth="150" editable="false"/>
                <Button text="⧉" onAction="#copySnils" styleClass="copy-button">
                    <tooltip>
                        <Tooltip text="Скопировать в буфер" styleClass="copy-in-buffer-tooltip"/>
                    </tooltip>
                </Button>
            </HBox>
        </VBox>
    </children>
    <Region VBox.vgrow="ALWAYS"/>
    <HBox alignment="CENTER">
        <Label text="Данный генератор предназначен исключительно для создания синтетических тестовых данных. Сгенерированные значения не предназначены для использования в продуктивных системах и отчётности."
               styleClass="toast-warning"/>
    </HBox>
</VBox>
