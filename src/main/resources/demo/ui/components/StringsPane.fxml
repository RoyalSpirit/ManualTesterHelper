<?xml version="1.0" encoding="UTF-8"?>

<?import demo.ui.controls.LimitedTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="demo.ui.components.StringAndNumbersController"
      styleClass="hbox-spacing, common-left-padding" alignment="BASELINE_LEFT">
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Введите длину строки:"/>
        <LimitedTextField maxLength="6" mode="DIGITS" fx:id="lettersLengthInputField" minWidth="110" maxWidth="110"
                          promptText="Например: 9"/>
    </HBox>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Label text="Выберите язык:"/>
        <ComboBox fx:id="languageSelectionBox" minWidth="150" maxWidth="150"/>
    </HBox>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="Сгенерировать текст" onAction="#onGenerateText" minWidth="200" maxWidth="200"/>
        <TextField fx:id="resultLettersField" minWidth="850" maxWidth="850" editable="false"/>
    </HBox>
</VBox>