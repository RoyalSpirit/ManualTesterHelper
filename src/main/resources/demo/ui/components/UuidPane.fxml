<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="demo.ui.components.BicSwiftUuidController"
      styleClass="hbox-spacing, common-left-padding" alignment="BASELINE_LEFT">
    <HBox spacing="20" alignment="CENTER_LEFT">
        <CheckBox fx:id="generateWithoutDashes" text="Сгенерировать без дефисов"/>
    </HBox>
    <HBox spacing="20" alignment="CENTER_LEFT">
        <Button text="Сгенерировать UUID" onAction="#onGenerateUuid" minWidth="180" maxWidth="180"/>
        <TextField fx:id="resultUuidField" minWidth="300" maxWidth="300" editable="false"/>
        <Button text="⧉" onAction="#copyUuid" styleClass="copy-button">
            <tooltip>
                <Tooltip text="Скопировать в буфер" styleClass="copy-in-buffer-tooltip"/>
            </tooltip>
        </Button>
    </HBox>
</VBox>