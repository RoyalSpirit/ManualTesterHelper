<?xml version="1.0" encoding="UTF-8"?>

<?import demo.ui.controls.LimitedTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml" fx:controller="demo.ui.components.BicSwiftUuidController"
      styleClass="hbox-spacing, common-padding-pane" alignment="BASELINE_LEFT">
    <Label text="Введите код страны:"/>
    <LimitedTextField maxLength="2" mode="LETTERS" fx:id="countryCodeInputField" minWidth="50" maxWidth="50"
                      promptText="RU"/>
    <Button text="Сгенерировать SWIFT" onAction="#onGenerateSwift" minWidth="180" maxWidth="180"/>
    <TextField fx:id="resultSwiftField" minWidth="150" maxWidth="150" editable="false"/>
</HBox>